<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="mySessionFactory">
  <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
  <property name="default_schema">public</property>
  <property name="show_sql">true</property>
  <property name="cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
  
  <property name="hbm2ddl.auto">update</property>
  <mapping package="de.u808.simpleinquest.domain"/>
  <mapping class="de.u808.simpleinquest.domain.Person"/>
  <mapping class="de.u808.simpleinquest.domain.User"/>
  <mapping class="de.u808.simpleinquest.domain.Document"/>
  <mapping class="de.u808.simpleinquest.domain.DocumentDirectory"/>
  <mapping class="de.u808.simpleinquest.domain.DocumentConfig"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzBlobTriggers"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzBlobTriggersId"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzCalendars"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzCronTriggers"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzCronTriggersId"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzFiredTriggers"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzJobDetails"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzJobDetailsId"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzJobListeners"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzJobListenersId"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzLocks"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzPausedTriggerGrps"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzSchedulerState"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzSimpleTriggers"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzSimpleTriggersId"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzTriggerListeners"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzTriggerListenersId"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzTriggers"/>
  <mapping class="de.u808.simpleinquest.domain.QrtzTriggersId"/>
  
 </session-factory>
</hibernate-configuration>
